{
  "name": "statsify",
  "description": "",
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.129",
    "@swc/helpers": "^0.3.2",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chokidar": "^3.5.2",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "git-cz": "^4.8.0",
    "prettier": "^2.5.1",
    "turbo": "^1.0.28",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "build": "turbo run build",
    "build:watch": "turbo run build:watch --parallel --no-cache",
    "commit": "git-cz --disable-emoji",
    "api": "yarn workspace api"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "build:watch": {
        "dependsOn": [
          "^build:watch"
        ]
      }
    }
  },
  "packageManager": "yarn@3.1.1"
}

{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "target": "ES2018"
  },
  "exclude": ["node_modules", "dist"]
}
